{
  "name": "store_backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "build": "npx tsc",
    "jasmine": "jasmine",
    "server": "nodemon dist/server.js",
    "start": "db-migrate db:create node_store_db && npm run build && db-migrate up && npm run server",
    "test": "npm run build && npm run jasmine",
    "prettier": "prettier --config .prettierrc src/**/**.ts --write",
    "eslint": "eslint --config .eslintrc src/**/**.ts",
    "prelint": "npm run prettier && npm run eslint",
    "migrate": "set NODE_ENV=test db-migrate --env test up && db-migrate up",
    "db-test": "db-migrate db:create testDB && set NODE_ENV=test&& db-migrate up --env test && npm run test && db-migrate reset --env test && db-migrate db:drop testDB",
    "db-test-no-build": "set NODE_ENV=test&& db-migrate up --env test && db-migrate down --env test",
    "db-dev-migrate": "db-migrate up && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Folarin14/store_backend.git"
  },
  "author": "Afolarin Lawal",
  "license": "ISC",
